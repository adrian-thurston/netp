namespace packet_name
	lex
		literal `-
		token component /[A-Z][a-z]*/
	end

	def name
		[component*]
	
	str makeLower( Name: str )
	{
		Lower: str = ""
		parse PN: packet_name::name[Name]
		for C: packet_name::component in PN {
			if Lower.length > 0
				Lower = Lower + "-"
			Lower = Lower + tolower($C)
		}
		return Lower
	}
end

