
lex
	literal `option `bool `string `long
	literal `: `;

	token id /[_a-zA-Z][_a-zA-Z0-9]*/

	ignore /[ \t\n\r]+/
end

lex
	literal `- -ni
	literal `-- -ni

	ignore /[ \t\n\r]+/
end

token short /[a-zA-Z]/
token long /[a-zA-Z][a-zA-Z\-]*/

def option_type
	[`bool]
|	[`string]
|	[`long]

def option_spec
	Ind: int
	[`- short]
|	[`-- long]

def option_def
	[`option option_type id `: option_spec+`;]

def definition
	[option_def]

def program
	[definition*]
